<% layout("/layout/boilerplate") %>

    <div class="row mt-3">
        <h2 class="col-6 offset-4">SignUp on RentHouse</h2>
        <div class="col-6 offset-3">
            <br>
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-lable"><b>Username:</b></label>
                    <input name="username" id="username" placeholder="Enter Username" type="text" class="form-control"
                        required>
                    <div class="valid-feedback">looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-lable"><b>Email:</b></label>
                    <input name="email" id="email" placeholder="Enter Email" type="text" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-lable"><b>Password:</b></label>
                    <input name="password" id="password" placeholder="Enter Password" type="text" class="form-control"
                        required>
                </div>
                <button class="btn btn-success">SignUp</button>
            </form>
            <br> <br>
        </div>
    </div>